    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/month"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:text="月份"
                android:textSize="14sp"
                android:background="#efefef"
                android:gravity="center" />

            <TextView
                android:id="@+id/day1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="一"
                android:textSize="12sp"
                android:background="#efefef"
                android:gravity="center" />

            <TextView
                android:id="@+id/day2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="二"
                android:textSize="12sp"
                android:background="#efefef"
                android:gravity="center" />

            <TextView
                android:id="@+id/day3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="三"
                android:textSize="12sp"
                android:background="#efefef"
                android:gravity="center" />

            <TextView
                android:id="@+id/day4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="四"
                android:textSize="12sp"
                android:background="#efefef"
                android:gravity="center" />

            <TextView
                android:id="@+id/day5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="五"
                android:textSize="12sp"
                android:background="#efefef"
                android:gravity="center" />

            <TextView
                android:id="@+id/day6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="六"
                android:textSize="12sp"
                android:background="#efefef"
                android:gravity="center" />

            <TextView
                android:id="@+id/day7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="日"
                android:textSize="12sp"
                android:background="#efefef"
                android:gravity="center" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f4f4f4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="1"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="2"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="3"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="4"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="5"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="6"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="7"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="8"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="9"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="10"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="11"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="12"
                        android:textSize="16sp"
                        android:gravity="center"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/course_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/course_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="暂无内容"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/jia"
        app:backgroundTint="#5693b7"
        app:rippleColor="#33728dff"/>

    <TextView
        android:id="@+id/team1"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/course_item_1"
        android:text="2016-2017 第1学期"
        android:textColor="#fff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="18dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/team2"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/course_item_2"
        android:text="2016-2017 第2学期"
        android:textColor="#fff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="116dp"
        android:layout_marginEnd="18dp"
        android:visibility="gone"/>


</RelativeLayout>
