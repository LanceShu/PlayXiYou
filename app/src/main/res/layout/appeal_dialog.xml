<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="课程申诉"
        android:textColor="#fff"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/appeal_dialog_header_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#fff">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="课程："
                android:textColor="#393939"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/appeal_course"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="123"
                android:textColor="#393939"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="日期："
                android:textColor="#393939"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/appeal_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="123"
                android:textColor="#393939"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="申诉状态："
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#393939"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="正常"
                android:textColor="#393939"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="备注："
                android:textColor="#393939"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/appeal_edit"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:hint="申请理由必须填写!\n不得小于5字说明!!"
                android:textColor="#393939"
                android:background="@null"
                android:textSize="14sp"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/appeal_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="点我申诉"
        android:textColor="#fff"
        android:textSize="18sp"
        android:background="@drawable/appeal_dialog_button_back"/>


</LinearLayout>