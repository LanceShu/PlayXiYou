<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/checkCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:backgroundTint="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:background="@drawable/check_item">

            <TextView
                android:id="@+id/WaterDate"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="WaterDate"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="#fff"
                android:background="@drawable/appeal_dialog_header_back"/>

            <TextView
                android:id="@+id/S_Name"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="S_Name"
                android:textSize="18sp" />

            <LinearLayout
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="课程代码："
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/S_Code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="S_Code"
                    android:gravity="center_vertical"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="节次："
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/JT_No"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="JT_No"
                    android:gravity="center_vertical"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="教室："
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/RoomNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RoomNum"
                    android:gravity="center_vertical"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="楼栋："
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/BName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BName"
                    android:gravity="center_vertical"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="考勤状态："
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/Status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Status"
                    android:gravity="center_vertical"
                    android:textSize="14sp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/but_layout"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <Button
                    android:id="@+id/appeal"
                    android:text="申诉"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:backgroundTint="@color/days"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
