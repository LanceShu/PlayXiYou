<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5693b7</item>
        <item name="colorPrimaryDark">#5693b7</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">#000</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        //边框
        <item name="android:windowFrame">@null</item>
        //是否显示在activity之上
        <item name="android:windowIsFloating">true</item>
        //动画
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        //半透明
        <item name="android:windowIsTranslucent">false</item>
        //模糊
        <item name="android:backgroundDimEnabled">true</item>
        //背景
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppStartLoadTranslucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>

    </style>


</resources>
